@using TaawonMVC.Web.Models.Common.Modals
@model TaawonMVC.Web.Models.InterventionType.InterventionTypeViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditInterventionType")))

<div class="modal-body">
    <form name="InterventionTypeForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="id" id="id" value="@Model.InterventionTypeOutput.Id" />
        <ul class="nav nav-tabs tab-nav-right" role="tablist">
            <li role="presentation" class="active"><a href="#edit-user-details" data-toggle="tab">Building Type Details</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane animated fadeIn active" id="edit-user-details">
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="interventionName" type="text" name="interventionName"  value="@Model.InterventionTypeOutput.InterventionName" required maxlength="255" minlength="2" class="validate form-control">
                                <label for="interventionName" class="form-label">@L("InterventionName")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/Views/InterventionType/_EditInterventionTypeModal.js"></script>